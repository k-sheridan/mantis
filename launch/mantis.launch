<launch>
	<node name="mantis_server" pkg="mantis" type="mantis_server" output="screen">
		<rosparam file="$(find mantis)/params/map.yaml"/>
	</node>
	<node name="maintis_client" pkg="mantis" type="mantis_client" output="screen">
		<rosparam file="$(find mantis)/params/map.yaml"/>
	</node>
	
	<node pkg="tf" type="static_transform_publisher" name="cam_link_pub1" 
			args="0 0 0 0 90 0 /bottom /base_link 100"/>
	
</launch>
